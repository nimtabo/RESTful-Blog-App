<% include ./partials/header %>
<div class="ui main text container">
    <div class="ui huge header">RESTFUL Blog App</div>
    <div class="ui top attached segment">
        <div class="ui divided items dodo">
            <% allblogs.forEach(function(blog){ %>
                <div class="item">
                    <div class="image">
                        <img src="<%= blog.image %>" alt="">
                    </div>
                    <div class="content">
                        <a class="header" href="/blogs/<%= blog._id %>"><%= blog.title.toUpperCase() %></h2>
                        <div class="meta">
                            <span><%= blog.created.toDateString() %></span>
                        </div>
                        <div class="desription">
                            <p><%-blog.body.substring(0, 100)%></p>
                        </div>
                        <div class="extra">
                            <a class="ui floated basic purple button" href="/blogs/<%= blog._id %>">
                                Read More
                                <i class="right chevron icon"></i> </a>          
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>

<% include ./partials/footer %>